<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".controllers.Alumnos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alu"
                android:textAlignment="center"
                android:fontFamily="@font/blenda_script"
                android:textColor="#4168C6"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:layout_marginStart="35dp"
                android:background="#BEFFFFFF"
                android:backgroundTint="#BEFFFFFF"
                android:hint="@string/matricula"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/botonsesion"
            android:text="@string/aceptar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/matricula"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/matricula"
                    android:layout_width="244dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="1dp"
                    android:text="@string/nombre"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bordes_tabla"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/grupo"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/grupo"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/carrera"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/carrera"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/area"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/temperatura"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/temperatura"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/simtomas"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/sintomas"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/altura"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/altura"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/peso"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/peso"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/diagnostico"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/diagnostico"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="26dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/observacion"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginStart="1dp"/>

                <TextView
                    android:id="@+id/observaciones"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/contorno">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/bordes_tabla"
                    android:padding="2dp"
                    android:text="@string/fecha"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:layout_marginBottom="1dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bordes_tabla"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>